<div class="row">
    <div class="col-md-4">
        <%= image_tag @play.play_img.url(:play_show), class:"play-show" %>
    </div>
    <div class="col-md-8">
        <div class="play__info">
            <h2 class="play__info play--title"><%= @play.title %></h2>
            <h3 class="play__info play--director"><span>De:</span><%= @play.director %></h3>
            <h4 class="play__info play--category"><%= @play.category.name %></h4>
            <p class="play__info play--description"><%= @play.description %></p>
            <label for=""><%= @play.stars %></label>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="reviews">
            <h1>Reviews</h1>
            <%= render @play.reviews %>
            <div>
                <%= link_to "Add reviews", new_play_review_path(@play), class:"btn-custom" %>
            </div>
        </div>
    </div>
</div>
<div class="links btn-group">
    <% if user_signed_in?  %>
    <% if @play.user_id == current_user.id %>
    <%= link_to "Edit", edit_play_path(@play), class:"btn btn-custom" %>
    <%= link_to "Delete", play_path(@play), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-custom" %>
        <% end  %>
    <% end %>    
</div>
